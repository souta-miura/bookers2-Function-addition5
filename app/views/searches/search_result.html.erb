<table class="table table-hover table-inverse">
  <% if @range == "User" %><!--検索対象モデルがUserの時 -->
  <h2>User search for</h2>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == "Book" %><!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
  <h2>Books search for</h2>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>